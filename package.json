{
  "name": "backend-api",
  "version": "1.2.47",
  "description": "The Rest API works to manage all the resources of Akatsuki Project customers. Customers consume the API to manage their users, purchases, sales, and many other jobs.",
  "author": "@sawako__",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:doc": "npx compodoc -p tsconfig.json -s",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "yarn process:assets && cls && echo init server Nestjs... && nest start",
    "start:dev": "yarn process:assets && cls && echo init server Nestjs... && nest start --watch",
    "start:debug": "yarn process:assets && cls && echo init server Nestjs... nest start --debug --watch",
    "start:prod": "yarn process:assets && cls && echo init server Nestjs... node dist/main",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "process:assets": "echo Processing assets... && tree src && xcopy /I /E /Y \"src/views\" \"dist/views\" && xcopy /I /E /Y \"src/i18n\" \"dist/i18n\""
  },
  "dependencies": {
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/common": "^6.7.2",
    "@nestjs/core": "^6.7.2",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/platform-socket.io": "^6.10.14",
    "@nestjs/websockets": "^6.10.14",
    "@typegoose/typegoose": "^6.2.1",
    "@types/moment-timezone": "^0.5.12",
    "bcryptjs": "^2.4.3",
    "cache-manager": "^2.10.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "mongoose": "^5.8.7",
    "multer": "^1.4.2",
    "nestjs-i18n": "^4.1.3",
    "nestjs-typegoose": "^7.0.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "ts-token-generator": "^1.0.4"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.0.1",
    "@types/express": "^4.17.1",
    "@types/express-rate-limit": "^3.3.3",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.0.18",
    "@types/mongoose": "^5.5.41",
    "@types/multer": "^1.3.10",
    "@types/node": "^12.7.5",
    "@types/passport": "^1.0.2",
    "@types/passport-jwt": "^3.0.3",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "^2.0.8",
    "dotenv": "^8.2.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
